<SetupScreenView>
    MDBoxLayout:
        orientation: "vertical"

        MDFloatLayout:

            MDBoxLayout:
                orientation: "vertical"
                adaptive_height: True
                size_hint_x: None
                width: root.width - dp(72)
                radius: 12
                padding: "12dp"
                md_bg_color: 1, 1, 1, .5
                pos_hint: {"center_x": .5, "center_y": .5}

                MDLabel:
                    text: "Данные системы:"
                    font_style: "H6"
                    adaptive_height: True
                    halign: "center"

                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True
                    padding: "10dp"
                    spacing: "10dp"

                    MDTextField:
                        id: setup_server_db
                        hint_text: "Сервер БД"
                        on_text: pass

                    MDTextField:
                        id: setup_name_db
                        hint_text: "Имя БД"
                        on_text: pass

                    MDTextField:
                        id: setup_username_db
                        hint_text: "Пользователь"
                        on_text: pass

                    MDTextField:
                        id: setup_passwd_db
                        hint_text: "Пароль"
                        on_text: pass

    MDFillRoundFlatButton:
        text: "Запомнить"
        on_release: root.controller.on_tap_button_save()
        pos_hint: {"center_x": .7, "center_y": .1}

    MDFillRoundFlatButton:
        text: "Отмена"
        on_release: app.manager_screens.current = 'login screen'
        pos_hint: {"center_x": .3, "center_y": .1}