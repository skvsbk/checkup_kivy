<ChooseRouteScreenView>
    MDBoxLayout:
        orientation: "vertical"
        padding: "10dp"

        MDLabel:
            text: "Выбор маршрута обхода"
            font_style: "H6"
            adaptive_height: True
            halign: "center"

        ScrollView:
            MDList:
                id: container

        MDBoxLayout:
            orientation: "horizontal"
            padding: "42dp"
            spacing: "20dp"

            MDFillRoundFlatButton:
                text: "Отмена"
                on_release: root.controller.on_tap_button_cancel()
                pos_hint: {"center_x": .3, "center_y": .1}

            MDFillRoundFlatButton:
                text: "Начать обход"
                on_release: root.controller.on_tap_button_start()
                pos_hint: {"center_x": .7, "center_y": .1}

<ListItemWithCheckbox>:
    IconLeftWidget:
        icon: root.icon

    RightCheckbox:
        group: 'group'
        listItem: root
        on_active: app.root.current_screen.controller.on_checkbox_active(*args)
        #on_active: root.controller.on_checkbox_active(*args)

